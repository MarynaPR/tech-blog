    <header class="hero">
        <h1 class="app-title"><a href="/dashboard">Your Dashboard</a></h1>
    </header>
    <section>
        <h2>Create New Post</h2>

        <form id="new-post-form" class="card-body">
            <label class="form-label" for="post-title">Title</label>
            <input type="text" name="post-title" class="form-input" />

            <label class="form-label" for="post-body">Content</label>
            <textarea name="post-body" class="form-input"></textarea>

            <button type="submit" class="btn">Create</button>
        </form>
    </section>
    {{!-- when signed in=>see navigation links for
 `homepage, the dashboard,logout` --}}
    {{#if posts.length}}
    <section>

        <h2>Your Posts</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
        </ol>
    </section>
    {{/if}}

    <script src="/javascript/add-post.js"></script>
    <script src="/javascript/logout.js"></script>

