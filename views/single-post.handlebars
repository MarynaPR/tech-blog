<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

{{#if post.Comments}}
<section class="card">
    <div class="card-header">
        <h3>Comments</h3>
    </div>

    <div class="card-body">
        {{#each post.Comments}}
        <div>
            <p>
                {{body}}
            </p>
            <p>
                &mdash; {{user.username}}, {{format_date createdAt}}
            </p>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{/if}}




{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}